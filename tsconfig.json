{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2016",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "paths": {
          "@src/*": ["src/*"],
          "*": [
              "src/*",
              "node_modules/*",
          ]
      },
      "lib": ["es2016", "esnext.asynciterable"]
  },
  "include": [
      "src/**/*"
  ]
}